execute pathogen#infect()
syntax on
filetype plugin indent on

set list listchars=tab:>-,trail:-
set ff=unix
set autoread
set relativenumber
set linebreak
set tabstop=2
set shiftwidth=2
set noexpandtab
let $BASH_ENV = "~/.bash_aliases"
color desert
set cursorline
:hi CursorLine   cterm=NONE ctermbg=darkblue ctermfg=white  
